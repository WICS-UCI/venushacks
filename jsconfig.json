{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es5",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.js", "**/*.jsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}